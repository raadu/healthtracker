<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/midnight_blue"
    android:gravity="center_horizontal"
    tools:context="com.threemusketeers.healthmaster.login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="50dp">


        <ImageView
            android:id="@+id/splash"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_gravity="center"
            android:src="@drawable/splash_image" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="Know Your Nutrition Plan"
            android:textColor="@color/clouds"
            android:textSize="18sp" />


        <!-- Login progress -->


        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="40dp"
                    android:layout_weight="4"
                    android:src="@drawable/email_icon" />


                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-45dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/clouds"
                    android:textColorHint="@color/clouds"
                    android:textColorLink="@color/clouds"
                    android:textSize="20sp"
                    tools:textColorLink="@color/asbestos" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="40dp"
                    android:layout_weight="4"
                    android:src="@drawable/unlock" />

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="-45dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="left"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingBottom="12dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/clouds"
                    android:textColorHint="@color/clouds"
                    android:textColorLink="@color/clouds"
                    android:textSize="20sp" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonSignin"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="@color/wet_asphalt"
                android:text="SIGN IN"
                android:textColor="@color/clouds"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/gplussignin"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/common_google_signin_btn_text_dark"
                android:text="SIGN IN WITH GOOGLE"
                android:textColor="@color/clouds"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/signupnow"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Not registered yet?"
                android:textColor="@color/clouds"
                android:textSize="16sp"

                />

            <Button
                android:id="@+id/textViewSignUp"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="@color/wet_asphalt"
                android:text="SIGN UP"
                android:textColor="@color/clouds"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewForgotPassword"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Forgot Password?"
                android:textColor="@color/clouds"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>